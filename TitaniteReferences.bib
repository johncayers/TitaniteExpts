number = {1-3},
pages = {105--119},
title = {{Trace-element incorporation in titanite: constraints from experimentally determined solid/liquid partition coefficients}},
url = {http://www.sciencedirect.com/science/article/B6V5Y-46RDBM1-2/2/70c83490e434e1467a073e065c8dd4a9},
volume = {191},
