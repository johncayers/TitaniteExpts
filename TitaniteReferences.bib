doi = {10.2138/am-2002-8-903},
issn = {0003-004X},
journal = {American Mineralogist},
month = {aug},
number = {8-9},
pages = {1062--1076},
title = {{Temperature-induced Al-zoning in hornblendes of the Fish Canyon magma, Colorado}},
url = {https://doi.org/10.2138/am-2002-8-903},
volume = {87},
year = {2002}
